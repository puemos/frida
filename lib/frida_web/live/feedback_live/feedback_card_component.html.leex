    <button
    phx-click="like"
              phx-target="<%= @myself %>"
    class="px-4 rounded-xl text-gray-500 text-center border-gray-300 hover:border-gray-500 border">
      <div class="text-blue-300">
        â–²
      </div>
      <div class="font-bold">
        <%= count_likes(assigns.feedback.likes) %>
